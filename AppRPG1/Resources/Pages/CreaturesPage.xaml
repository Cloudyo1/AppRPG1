<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRPG1.CreaturesPage"
             Title="Creatures Page">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#992a11" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="WidthRequest" Value="250" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="BorderColor" Value="Black" />
            <Setter Property="BorderWidth" Value="1" />
            <Style.Triggers>
                <Trigger TargetType="Button" Property="IsPressed" Value="True">
                    <Setter Property="BackgroundColor" Value="#6e1d0b" />
                    <!-- Darker color -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15" HorizontalOptions="Center" VerticalOptions="Start">

            <!-- Centralized Image -->
            <Image Source="jormungandr.png" 
                   HeightRequest="250" 
                   WidthRequest="250" 
                   Aspect="AspectFit" 
                   HorizontalOptions="Center" />

            <!-- List of Buttons -->
            <VerticalStackLayout Spacing="15">
                <!-- Buttons -->
                <Button Text="Dokkalfar" Clicked="OnCreatureButtonClicked" />
                <Button Text="Draugr" Clicked="OnCreatureButtonClicked" />
                <Button Text="Dvergar" Clicked="OnCreatureButtonClicked" />
                <Button Text="Fenrir" Clicked="OnCreatureButtonClicked" />
                <Button Text="Goblin" Clicked="OnCreatureButtonClicked" />
                <Button Text="Hart" Clicked="OnCreatureButtonClicked" />
                <Button Text="Hulder" Clicked="OnCreatureButtonClicked" />
                <Button Text="Jormungandr" Clicked="OnCreatureButtonClicked" />
                <Button Text="Jotun" Clicked="OnCreatureButtonClicked" />
                <Button Text="Lindwyrm" Clicked="OnCreatureButtonClicked" />
                <Button Text="Ljosalfar" Clicked="OnCreatureButtonClicked" />
                <Button Text="Mimir" Clicked="OnCreatureButtonClicked" />
                <Button Text="Nidhoggr" Clicked="OnCreatureButtonClicked" />
                <Button Text="Niflungr" Clicked="OnCreatureButtonClicked" />
                <Button Text="Norns" Clicked="OnCreatureButtonClicked" />
                <Button Text="Nuckelavee" Clicked="OnCreatureButtonClicked" />
                <Button Text="Ratatoskr" Clicked="OnCreatureButtonClicked" />
                <Button Text="Skrymir" Clicked="OnCreatureButtonClicked" />
                <Button Text="Stags" Clicked="OnCreatureButtonClicked" />
                <Button Text="Surtur" Clicked="OnCreatureButtonClicked" />
                <Button Text="Swans" Clicked="OnCreatureButtonClicked" />
                <Button Text="Troll" Clicked="OnCreatureButtonClicked" />
                <Button Text="Valravn" Clicked="OnCreatureButtonClicked" />
                <Button Text="Vedrfolnir" Clicked="OnCreatureButtonClicked" />
                <Button Text="Wolves" Clicked="OnCreatureButtonClicked" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>