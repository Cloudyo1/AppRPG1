<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRPG1.DamagePage"
             Title="Damage Page">

    <ScrollView>
        <VerticalStackLayout
            Padding="10"
            Spacing="15"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <!-- Top-Centered Image -->
            <Image
                Source="damage.webp" 
                HeightRequest="200"
                WidthRequest="200"
                Aspect="AspectFit"
                HorizontalOptions="Center" />

            <!-- Button Grid: 2 buttons per row -->
                <VerticalStackLayout Padding="10" Spacing="15" HorizontalOptions="Center" VerticalOptions="Start">
                <!-- Button 1 -->
                <Frame x:Name="slash" BackgroundColor="#4d0912" CornerRadius="25" HasShadow="True" Padding="10">
                    <Grid ColumnDefinitions="100, *">
                        <Image Source="slash.webp" HeightRequest="80" WidthRequest="80" />
                        <Label Text="Corte" FontSize="20" TextColor="White" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="Start" />
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonClicked" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Button 2 -->
                <Frame x:Name="puncture" BackgroundColor="#4d0912" CornerRadius="25" HasShadow="True" Padding="10">
                    <Grid ColumnDefinitions="100, *">
                        <Image Source="puncture.webp" HeightRequest="80" WidthRequest="80" />
                        <Label Text="Punctura" FontSize="20" TextColor="White" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="Start" />
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonClicked" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Button 3 -->
                <Frame x:Name="impact" BackgroundColor="#4d0912" CornerRadius="25" HasShadow="True" Padding="10">
                    <Grid ColumnDefinitions="100, *">
                        <Image Source="impact.webp" HeightRequest="80" WidthRequest="80" />
                        <Label Text="Impacto" FontSize="20" TextColor="White" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="Start" />
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonClicked" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Button 4 -->
                <Frame x:Name="heat" BackgroundColor="#4d0912" CornerRadius="25" HasShadow="True" Padding="10">
                    <Grid ColumnDefinitions="100, *">
                        <Image Source="heat.webp" HeightRequest="80" WidthRequest="80" />
                        <Label Text="Fogo" FontSize="20" TextColor="White" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="Start" />
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonClicked" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Button 5 -->
                <Frame x:Name="cold" BackgroundColor="#4d0912" CornerRadius="25" HasShadow="True" Padding="10">
                    <Grid ColumnDefinitions="100, *">
                        <Image Source="cold.webp" HeightRequest="80" WidthRequest="80" />
                        <Label Text="Gelo" FontSize="20" TextColor="White" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="Start" />
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonClicked" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Button 6 -->
                <Frame x:Name="electric" BackgroundColor="#4d0912" CornerRadius="25" HasShadow="True" Padding="10">
                    <Grid ColumnDefinitions="100, *">
                        <Image Source="electric.webp" HeightRequest="80" WidthRequest="80" />
                        <Label Text="Eletricidade" FontSize="20" TextColor="White" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="Start" />
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonClicked" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Button 7 -->
                <Frame x:Name="toxin" BackgroundColor="#4d0912" CornerRadius="25" HasShadow="True" Padding="10">
                    <Grid ColumnDefinitions="100, *">
                        <Image Source="toxin.webp" HeightRequest="80" WidthRequest="80" />
                        <Label Text="Toxina" FontSize="20" TextColor="White" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="Start" />
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonClicked" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Button 8 -->
                <Frame x:Name="umbral" BackgroundColor="#4d0912" CornerRadius="25" HasShadow="True" Padding="10">
                    <Grid ColumnDefinitions="100, *">
                        <Image Source="umbral.webp" HeightRequest="80" WidthRequest="80" />
                        <Label Text="Umbral" FontSize="20" TextColor="White" Grid.Column="1" VerticalTextAlignment="Center" HorizontalOptions="Start" />
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnButtonClicked" />
                    </Frame.GestureRecognizers>
                </Frame>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>