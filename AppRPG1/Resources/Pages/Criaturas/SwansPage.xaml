<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRPG1.SwansPage"
             Title="SwansPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

            <!-- Image of the Dokkalfar -->
            <Image Source="swans.jpg" 
               HeightRequest="300" 
               WidthRequest="300" 
               Aspect="AspectFit" 
               HorizontalOptions="Center" />

            <!-- Title -->
            <Label Text="Swans"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               TextColor="Turquoise" />

            <!-- Description Text -->
            <Label Text="Os Cisnes de Urd são criaturas sagradas que habitam o poço de Urd, na base de Yggdrasil. Representando pureza e sabedoria, eles são ligados às Nornas e ao destino, sendo frequentemente descritos como mensageiros divinos."
               FontSize="20"
               LineHeight="1.5"
               TextColor="White"
               HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>