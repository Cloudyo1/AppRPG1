<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRPG1.SkrymirPage"
             Title="SkrymirPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

            <!-- Image of the Dokkalfar -->
            <Image Source="skrymir.jpg" 
               HeightRequest="300" 
               WidthRequest="300" 
               Aspect="AspectFit" 
               HorizontalOptions="Center" />

            <!-- Title -->
            <Label Text="Skrymir"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               TextColor="Turquoise" />

            <!-- Description Text -->
            <Label Text="Skrymir é um gigante poderoso e astuto que desafia Thor e seus companheiros em provas de força e inteligência. Suas ações destacam a habilidade dos gigantes em usar a esperteza para enganar até os deuses."
               FontSize="20"
               LineHeight="1.5"
               TextColor="White"
               HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>