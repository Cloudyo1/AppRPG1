<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRPG1.ValravnPage"
             Title="ValravnPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

            <!-- Image of the Dokkalfar -->
            <Image Source="valravn.jpg" 
               HeightRequest="300" 
               WidthRequest="300" 
               Aspect="AspectFit" 
               HorizontalOptions="Center" />

            <!-- Title -->
            <Label Text="Valravn"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               TextColor="Turquoise" />

            <!-- Description Text -->
            <Label Text="O Valravn é uma criatura mítica, metade corvo e metade humano, que habita os campos e florestas sombrias. Na mitologia nórdica, os Valravns são vistos como aves de mau agouro, ligadas ao destino e à morte. Eles são conhecidos por guiar as almas dos guerreiros mortos para o além, servindo aos deuses ou às forças do caos."
               FontSize="20"
               LineHeight="1.5"
               TextColor="White"
               HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>