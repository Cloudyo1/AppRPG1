<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRPG1.AesirPage"
             Title="AesirPage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#d4ce1c" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="WidthRequest" Value="250" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="BorderColor" Value="Black" />
            <Setter Property="BorderWidth" Value="1" />
            <Style.Triggers>
                <Trigger TargetType="Button" Property="IsPressed" Value="True">
                    <Setter Property="BackgroundColor" Value="#6e6a0e" />
                    <!-- Darker color -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="25" HorizontalOptions="Center" VerticalOptions="Start">

            <!-- Centralized Image -->
            <Image Source="horn.png" 
               HeightRequest="250" 
               WidthRequest="250" 
               Aspect="AspectFit" 
               HorizontalOptions="Center" />

            <!-- List of Buttons -->
            <VerticalStackLayout Spacing="15">
                <!-- Buttons -->
                <Button Text="Aegir" Clicked="OnCreatureButtonClicked" />
                <Button Text="Balder" Clicked="OnCreatureButtonClicked" />
                <Button Text="Bragi" Clicked="OnCreatureButtonClicked" />
                <Button Text="Forseti" Clicked="OnCreatureButtonClicked" />
                <Button Text="Frigg" Clicked="OnCreatureButtonClicked" />
                <Button Text="Heimdall" Clicked="OnCreatureButtonClicked" />
                <Button Text="Hodr" Clicked="OnCreatureButtonClicked" />
                <Button Text="Hoenir" Clicked="OnCreatureButtonClicked" />
                <Button Text="Idunn" Clicked="OnCreatureButtonClicked" />
                <Button Text="Loki" Clicked="OnCreatureButtonClicked" />
                <Button Text="Mani" Clicked="OnCreatureButtonClicked" />
                <Button Text="Odin" Clicked="OnCreatureButtonClicked" />
                <Button Text="Ran" Clicked="OnCreatureButtonClicked" />
                <Button Text="Sif" Clicked="OnCreatureButtonClicked" />
                <Button Text="Sigyn" Clicked="OnCreatureButtonClicked" />
                <Button Text="Sunna" Clicked="OnCreatureButtonClicked" />
                <Button Text="Thor" Clicked="OnCreatureButtonClicked" />
                <Button Text="Tyr" Clicked="OnCreatureButtonClicked" />
                <Button Text="Ullr" Clicked="OnCreatureButtonClicked" />
                <Button Text="Vali" Clicked="OnCreatureButtonClicked" />
                <Button Text="Vidarr" Clicked="OnCreatureButtonClicked" />
                <Button Text="Vili" Clicked="OnCreatureButtonClicked" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>