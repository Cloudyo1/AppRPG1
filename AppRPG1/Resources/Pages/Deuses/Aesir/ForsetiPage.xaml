<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRPG1.ForsetiPage"
             Title="ForsetiPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

            <!-- Image of the Dokkalfar -->
            <Image Source="forseti.jpg" 
           HeightRequest="300" 
           WidthRequest="300" 
           Aspect="AspectFit" 
           HorizontalOptions="Center" />

            <!-- Title -->
            <Label Text="Forseti"
           FontSize="28"
           FontAttributes="Bold"
           HorizontalTextAlignment="Center"
           TextColor="Turquoise" />

            <!-- Description Text -->
            <Label Text="Forseti é o deus da justiça e da mediação. Filho de Balder e Nanna, ele reside em seu palácio, Glitnir, e resolve disputas entre os deuses."
           FontSize="20"
           LineHeight="1.5"
           TextColor="White"
           HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>