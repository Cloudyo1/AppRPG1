<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRPG1.HodrPage"
             Title="HodrPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

            <!-- Image of the Dokkalfar -->
            <Image Source="hodr.png" 
           HeightRequest="300" 
           WidthRequest="300" 
           Aspect="AspectFit" 
           HorizontalOptions="Center" />

            <!-- Title -->
            <Label Text="Hodr"
           FontSize="28"
           FontAttributes="Bold"
           HorizontalTextAlignment="Center"
           TextColor="Turquoise" />

            <!-- Description Text -->
            <Label Text="Höðr é o deus da escuridão e da infortúnio. Ele foi manipulado por Loki para matar seu irmão Balder, o que leva à série de eventos que culminam no Ragnarök."
           FontSize="20"
           LineHeight="1.5"
           TextColor="White"
           HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>